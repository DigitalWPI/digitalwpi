<div class="panel panel-default">
  <div class="panel-heading"><h4><%= t('.date_range_heading') %></h4></div>
  <div class="panel-body">
    <%= form_tag(redirect_path, method: :get, class: "form-inline") do %>
      <%= hidden_field_tag :center_tesim, params[:center_tesim] %>
      <%= hidden_field_tag :member_of_collection_ids_ssim, params[:member_of_collection_ids_ssim] %>
      <%= hidden_field_tag :include_ga3, params[:include_ga3] %>
      <%= t('.start_date') %>: <%= date_field_tag :start_date, params[:start_date], class: 'datepicker form-control', placeholder: 'mm/dd/yyyy', required: true %>
      <%= t('.end_date') %>: <%= date_field_tag :end_date, params[:end_date], class: 'datepicker form-control', placeholder: 'mm/dd/yyyy', required: true %>
      <%= submit_tag "#{t('.set_date_range')}", class: 'btn btn-primary' %>
      <%= link_to "#{t('.reset_date_range')}", redirect_path if params[:start_date] %>
    <% end %>
  </div>
</div>