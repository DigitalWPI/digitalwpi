<div class="citations">
  <% if Hyrax.config.citations? %>
    <button class="btn btn-default" data-toggle="modal" data-target="#citations-modal"><%= t("hyrax.citations.citation") %></button>
  <% end %>
  <div class="btn-group">
    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      <%= t('Export as') %> <span class="caret"></span>
    </button>
    <ul class="dropdown-menu">
      <li><%= link_to 'CSV', polymorphic_path([main_app, presenter], format: 'csv') %></li>
      <li><%= link_to 'JSON', polymorphic_path([main_app, presenter], format: 'json') %></li>
      <li><%= link_to 'JSON-LD', polymorphic_path([main_app, presenter], format: 'jsonld') %></li>
      <li><%= link_to 'N-Triples', polymorphic_path([main_app, presenter], format: 'nt') %></li>
      <li><%= link_to 'Turtle', polymorphic_path([main_app, presenter], format: 'ttl') %></li>
    </ul>
  </div>
</div>

<div class="modal fade" id="citations-modal" tabindex="-1" role="dialog" aria-labelledby="citations-modal-title" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h5 class="modal-title" id="citations-modal-title"><%= t("hyrax.citations.citation") %></h5>
      </div>
      <div class="modal-body wpi-citation-modal">
        <div class="cite">
          <h4 class="text-center">APA</h4>
          <span class="apa-citation"><%= export_as_apa_citation(presenter) %></span>
        </div>
        <div class="cite">
          <h4 class="text-center">Chicago</h4>
          <span class="chicago-citation "><%= export_as_chicago_citation(presenter) %></span>
        </div>
        <div class="cite">
          <h4 class="text-center">MLA</h4>
          <span class="mla-citation"><%= export_as_mla_citation(presenter) %></span>
        </div>
        <ul class="list-inline">
          <li><%= link_to 'BibTeX', polymorphic_path([main_app, presenter], format: 'bib') %></li>
          <li><%= link_to 'EndNote', polymorphic_path([main_app, presenter], format: 'endnote') %></li>
          <li><%= link_to 'RIS', polymorphic_path([main_app, presenter], format: 'ris') %></li>
        </ul>
      </div>
    </div>
  </div>
</div>
