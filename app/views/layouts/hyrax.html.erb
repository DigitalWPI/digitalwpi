<!DOCTYPE html>
<html lang="<%= I18n.locale.to_s %>" prefix="og:http://ogp.me/ns#">
  <head>
    <%= render partial: 'layouts/head_tag_content' %>
    <%= content_for(:head) %>
  </head>

  <body>
    <div class="skip-to-content">
      <%= link_to "Skip to Content", "#skip-to-content" %>
    </div>
    <%= content_for(:navbar) %>
    <%= render 'shared/slider' if controller_name == 'homepage' %>
    <%= content_for(:precontainer_content) %>
    
    <% if controller_name=='homepage' %>
    <div id="content-wrapper" class="featured-container" role="main">
    <% else %>
    <div id="content-wrapper" class="container" role="main">
    <% end %>

      <%= render '/flash_msg' %>
      <%= render_breadcrumbs builder: Hyrax::BootstrapBreadcrumbsBuilder %>
      <% if content_for?(:page_header) %>
        <div class="row">
          <div class="col-xs-12 main-header">
            <%= yield(:page_header) %>
          </div>
        </div>
      <% end %>
        <a name="skip-to-content" id="skip-to-content"></a>
        <%= content_for?(:content) ? yield(:content) : yield %>
        <%= render partial: '/permalink' %>

    </div><!-- /#content-wrapper -->
    <%= render 'shared/footer' %>
    <%= render 'shared/ajax_modal' %>
  </body>
</html>
